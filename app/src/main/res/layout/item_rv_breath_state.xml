<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transparent"
    app:cardUseCompatPadding="true"

    app:cardPreventCornerOverlap="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Time"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Date"
            android:layout_toEndOf="@+id/lbl_date"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/lbl_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date_value"
            android:padding="5dp"
            android:text="State"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/txt_state_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date_value"
            android:padding="5dp"
            android:text="State"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/lbl_state"
            android:textColor="@color/colorWhite"/>

        <itg8.com.nowzonedesigndemo.steps.widget.CustomFontTextView
            android:id="@+id/txt_count_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            app:font_value="juraMedium"
            android:layout_alignBottom="@+id/txt_state_value"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="20"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>