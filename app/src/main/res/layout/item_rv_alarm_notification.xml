<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="64dp"
    android:layout_marginLeft="64dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_value"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_below="@+id/img_close"
        android:id="@+id/txt_app_name"
        android:text="NowZone"/>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_closes"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txt_alarmStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_value"
        android:layout_below="@+id/txt_app_name"
        android:layout_marginTop="08dp"
        android:text="Alarm Started" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_value"
        android:layout_below="@+id/txt_app_name"
        android:layout_marginTop="08dp"
        android:layout_alignParentEnd="true"

        android:id="@+id/txt_time"
        android:text="8:00 am" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_value"
        android:layout_below="@+id/txt_alarmStarted"
        android:layout_marginTop="08dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_hours"
        android:text="11:00  08:30 am" />

</RelativeLayout>