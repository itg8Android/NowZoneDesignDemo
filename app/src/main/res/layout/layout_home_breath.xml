<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_wave"
    android:layout_alignParentTop="true"
   >

    <RelativeLayout
        android:id="@+id/rl_breath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/marginRightHomeImage"
        android:layout_marginRight="@dimen/marginRightHomeImage">

        <ImageView
            android:id="@+id/img_breatch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_breath" />

        <TextView
            android:id="@+id/txt_breathRate"
            style="@style/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/img_breatch"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_breatch"
            android:text="@string/breath_rate" />

        <TextView
            style="@style/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="16sp"
            android:textSize="@dimen/txt_breath_value" />

        <TextView
            style="@style/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/minute"
            android:textSize="@dimen/txt_breath_value" />

        <TextView
            style="@style/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_breatch"
            android:layout_marginTop="05dp"
            android:layout_toEndOf="@+id/img_breatch"
            android:text="@string/status" />

    </RelativeLayout>

</RelativeLayout>
