<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/accent"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <itg8.com.nowzonedesigndemo.steps.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_value="juraMedium"
            android:textColor="@color/colorWhite"
            android:text="November"
            android:id="@+id/txt_month_name"

            />

        <itg8.com.nowzonedesigndemo.steps.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_value="juraMedium"
            android:textColor="@color/colorWhite"
            android:id="@+id/txt_lbl_step"
            android:layout_toStartOf="@+id/txt_lbl_step_count"
            android:text="Steps"
            />

        <itg8.com.nowzonedesigndemo.steps.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_value="juraMedium"
            android:textColor="@color/colorWhite"
            android:id="@+id/txt_lbl_step_count"
            android:layout_alignParentEnd="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="2000"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>