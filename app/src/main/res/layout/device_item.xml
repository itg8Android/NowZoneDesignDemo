<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_selected_device_item"
    android:layout_margin="10dp"
    >
    <itg8.com.nowzonedesigndemo.widget.SignalMeter
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/SignalMeter"
        app:maxBars="10"
        app:barType="1"
        app:bgColor="@color/colorAccent"
        app:bgColor1="@color/colorAccent"
        app:prColor="@color/colorPrimary"
        app:prColor1="@color/colorPrimary"
        app:barSpacing="1dp"
        app:progressValue="1"
        app:rotation="0"
        android:padding="2dp"
        android:alpha="1"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/deviceName"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/deviceAddress"
        android:layout_below="@+id/deviceName"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>


</RelativeLayout>