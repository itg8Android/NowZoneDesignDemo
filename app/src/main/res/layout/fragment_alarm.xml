<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    tools:context="itg8.com.nowzonedesigndemo.setting.fragment.AlarmFragment">
    <RelativeLayout
        android:id="@+id/rl_alarm_smart_main"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/calm_back"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@android:color/transparent">
            <include layout="@layout/layout_smart_alarm"
                android:id="@+id/rl_include_smart"/>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alarm_meditation_main"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_alarm_smart_main"
        android:background="@drawable/calm_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@android:color/transparent">

            <include layout="@layout/layout_smart_alarm"
                android:id="@+id/rl_include_meditation"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</RelativeLayout>
