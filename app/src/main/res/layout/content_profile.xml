<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/marginLeftProfile"
    android:layout_marginStart="@dimen/marginRightProfile"
    android:layout_marginTop="@dimen/margin_alarm_top"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itg8.com.nowzonedesigndemo.profile.ProfileActivity"
    tools:showIn="@layout/activity_profile">


    <RelativeLayout
        android:id="@+id/rl_profileImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_photo">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:visibility="visible"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"
                app:rippleColor="@color/colorPrimary"
                app:srcCompat="@drawable/ic_photo_camera_black_24dp" />

        </FrameLayout>


    </RelativeLayout>

    <itg8.com.nowzonedesigndemo.steps.widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:text="Your Basic details"
        android:textSize="16sp"
        android:id="@+id/basic_detail"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:layout_below="@+id/basic_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:lines="1"
            android:textSize="@dimen/txt_edit_text_size" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_name"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1.2">

            <EditText
                android:id="@+id/edt_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height"
                android:inputType="number"
                android:lines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_height_cm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            android:layout_weight="1.2">

            <EditText
                android:id="@+id/edt_height_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=" "
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/rbg_main_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rgb_height_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cm"
                android:textColor="@drawable/rbtn_height_color" />

            <RadioButton
                android:id="@+id/rgb_height_feet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="feet"
                android:textColor="@drawable/rbtn_text_color_steps" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_height"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <EditText
                android:id="@+id/edt_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rbg_main_weight"
                android:hint=" "
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>


        <RadioGroup
            android:id="@+id/rbg_main_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rgb_weight_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="  kg   "
                android:textColor="@drawable/rbtn_height_color" />

            <RadioButton
                android:id="@+id/rgb_weight_pounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="pounds"
                android:textColor="@drawable/rbtn_text_color_steps" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
