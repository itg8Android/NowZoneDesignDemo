<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/marginLeftProfile"
    android:layout_marginStart="@dimen/marginRightProfile"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itg8.com.nowzonedesigndemo.profile.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:lines="1"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_name"
        android:layout_marginEnd="@dimen/marginRightProfile"
        android:layout_marginStart="@dimen/marginRightProfile"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height"
                android:lines="1"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_height_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="height[cm]"
                android:lines="1"
                android:inputType="number"
                android:maxLines="1"
                android:visibility="gone" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/rbg_main_height"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rgb_height_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cm"
                android:textColor="@drawable/rbtn_height_color" />

            <RadioButton
                android:id="@+id/rgb_height_feet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="feet"
                android:textColor="@drawable/rbtn_text_color_steps" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_height"
        android:layout_marginEnd="@dimen/marginRightProfile"
        android:layout_marginStart="@dimen/marginRightProfile"
        android:orientation="horizontal"

        android:weightSum="3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginAlarm"
            android:layout_marginTop="20dp"
            android:layout_weight="2">

            <EditText
                android:id="@+id/edt_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/rbg_main_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rgb_steps_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="   kg  "
                android:textColor="@drawable/rbtn_height_color" />

            <RadioButton
                android:id="@+id/rgb_step_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_height_select"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="pounds"
                android:textColor="@drawable/rbtn_text_color_steps" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_weight"
        android:layout_margin="@dimen/marginProfile"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
